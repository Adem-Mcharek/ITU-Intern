# Flask WebTV Processing App - Configuration
# Copy this file to .env and uncomment/modify values as needed

# =============================================================================
# AI SERVICES (Priority Order: Azure → OpenAI → Ollama → Gemini)
# =============================================================================

# -----------------------------------------------------------------------------
# PRIMARY: Azure OpenAI API (GPT-4) - Production ready, stable
# -----------------------------------------------------------------------------
AZURE_OPENAI_API_KEY=your-azure-openai-api-key-here
AZURE_OPENAI_ENDPOINT=https://z-openai-openai4tsb-dev-chn.openai.azure.com/
AZURE_OPENAI_API_VERSION=2024-12-01-preview
AZURE_OPENAI_DEPLOYMENT_NAME=GPT-4

# -----------------------------------------------------------------------------
# SECONDARY: OpenAI API (GPT-5/GPT-4 Turbo) - Optional fallback
# -----------------------------------------------------------------------------
# Get your API key from: https://platform.openai.com/api-keys
# Leave empty to use only Azure OpenAI
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL_NAME=gpt-4-turbo
# Optional: OpenAI Organization ID (if you have one)
# OPENAI_ORG_ID=org-your-org-id-here
# Optional: Base URL (default: https://api.openai.com/v1)
# OPENAI_BASE_URL=https://api.openai.com/v1

# -----------------------------------------------------------------------------
# TERTIARY: Google Gemini API - Additional fallback for legacy features
# -----------------------------------------------------------------------------
# Get your key from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your-gemini-api-key-here

# =============================================================================
# FLASK SETTINGS
# =============================================================================

# Secret key for Flask sessions
SECRET_KEY=your-secret-key-here-change-in-production
DEBUG=False

# =============================================================================
# DATABASE
# =============================================================================

# Database URL (SQLite by default)
# Note: Do NOT include quotes around the path
DATABASE_URL=sqlite:///instance/app.db

# =============================================================================
# FILE STORAGE
# =============================================================================

# Maximum file upload size in bytes (default: 500MB)
MAX_CONTENT_LENGTH=524288000

# =============================================================================
# OPTIONAL SETTINGS
# =============================================================================

# Use GPU for Whisper transcription (true/false)
# Set to 'true' to use CUDA GPU if available (recommended for faster transcription)
# Set to 'false' to force CPU usage
USE_GPU=true

# Admin email
ADMIN_EMAIL=admin@example.com

# Application version
APP_VERSION=1.0.0
GIT_HASH=development

