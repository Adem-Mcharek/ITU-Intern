# Flask WebTV Processing App - Configuration
# Copy this file to .env and uncomment/modify values as needed

# =============================================================================
# AI SERVICES
# =============================================================================

# Google Gemini API Key for speaker identification
# Get your key from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your-gemini-api-key-here

# Azure OpenAI API for enhanced speaker identification (GPT-4)
AZURE_OPENAI_API_KEY=your-azure-openai-api-key-here
AZURE_OPENAI_ENDPOINT=https://z-openai-openai4tsb-dev-chn.openai.azure.com/
AZURE_OPENAI_API_VERSION=2024-12-01-preview
AZURE_OPENAI_DEPLOYMENT_NAME=GPT-4

# =============================================================================
# FLASK SETTINGS
# =============================================================================

# Secret key for Flask sessions
SECRET_KEY=your-secret-key-here-change-in-production
DEBUG=False

# =============================================================================
# DATABASE
# =============================================================================

# Database URL (SQLite by default)
# Note: Do NOT include quotes around the path
DATABASE_URL=sqlite:///instance/app.db

# =============================================================================
# FILE STORAGE
# =============================================================================

# Maximum file upload size in bytes (default: 500MB)
MAX_CONTENT_LENGTH=524288000

# =============================================================================
# OPTIONAL SETTINGS
# =============================================================================

# OpenAI API Key (optional, for future features)
OPENAI_API_KEY=your-openai-api-key-here-optional

# Use GPU for Whisper transcription (true/false)
# Set to 'true' to use CUDA GPU if available (recommended for faster transcription)
# Set to 'false' to force CPU usage
USE_GPU=true

# Admin email
ADMIN_EMAIL=admin@example.com

# Application version
APP_VERSION=1.0.0
GIT_HASH=development

